<h1>Listing courses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Briefing</th>
    <th>Start at</th>
    <th>End at</th>
    <th>Due at</th>
    <th>Price</th>
    <th>Duration days</th>
    <th>Group</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.title %></td>
    <td><%= course.description %></td>
    <td><%= course.briefing %></td>
    <td><%= course.start_at %></td>
    <td><%= course.end_at %></td>
    <td><%= course.due_at %></td>
    <td><%= course.price %></td>
    <td><%= course.duration_days %></td>
    <td><%= course.group_id %></td>
    <td><%= course.category_id %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

