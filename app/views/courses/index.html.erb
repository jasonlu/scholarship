<h1>Listing courses</h1>

<table class="table table-striped">
  <tr>
    <th>Group</th>
    <th>Category</th>
    <th>Title</th>
    
    <th>Briefing</th>
    
    <th>Price</th>
    <th>Duration days</th>
    
    <th></th>
    <th></th>
    
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.group.title %></td>
    <td><%= course.category.title %></td>
    <td><%= course.title %></td>
    
    <td><%= simple_format(course.briefing) %></td>
    
    <td><%= course.price %></td>
    <td><%= course.duration_days %></td>
    
    <td><%= link_to '詳情', course %></td>
    <td><%= link_to '加入購物車', edit_course_path(course), :class => 'add-to-cart'%></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Course', new_course_path %>
