<%= form_for(@user_profile, :url => {:action => 'update'}, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @user_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_profile.errors.count, "error") %> prohibited this user_profile from being saved:</h2>

      <ul>
      <% @user_profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field span3">
      <%= f.label :lastname, t('姓') %>
      <%= f.text_field :lastname %>
    </div>
    <div class="field span3">
      <%= f.label :middlename, t('中間名')%>
      <%= f.text_field :middlename %>
    </div>
    <div class="field span3">
      <%= f.label :firstname, t('名') %>
      <%= f.text_field :firstname %>
    </div>
  </div>
  <div class="field">
    <%= f.label :id_number, t('證件號碼'), :class => '' %>
    <%= f.text_field :id_number %>
  </div>
  <div class="field">
    <%= f.label :dob, t('生日') %>
    <%= f.date_select :dob, :start_year => 1950, :end_year => Time.now.year - 5 %>
  </div>
  <div class="field">
    <%= f.label :gender, t('性別') %>
    <%= f.radio_button("gender", "1") %>
    <%= f.label :gender, '男性', :value => 1, :class => "radio" %>
    <%= f.radio_button("gender", "0") %>
    <%= f.label :gender, '女性', :value => 0, :class => "radio"%>
  </div>
  <div class="field">
    <%= f.label :education, t('教育程度') %>
    <%= f.select :education, ['小學', '中學', '高中職', '大學', '研究所', '博士'] %>
  </div>
  <div class="field">
    <%= f.label :country, t('國籍') %>
    <%= f.select :country, [['台灣', 'tw'], ['中國', 'cb']] %>
  </div>
  <div class="field state">
    <%= f.label :state, t('省份') %>
    <%= f.select :state,['北京市','天津市','河北省','山西省','內蒙古自治區','遼寧省','吉林省','黑龍江省','上海市','江蘇省','浙江省','安徽省','福建省','江西省','山東省','河南省','湖北省','湖南省','廣東省','廣西壯族自治區','海南省','重慶市','四川省','貴州省','雲南省','西藏自治區','陝西省','甘肅省','青海省','寧夏回族自治區','新疆維吾爾自治區','香港特別行政區','澳門特別行政區'] %>
  </div>
  <div class="field">
    <%= f.label :register_address, t('戶籍地址') %>
    <%= f.text_field :register_address %>
  </div>
  <div class="field">
    <%= f.label :address, t('居住地址') %>
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>