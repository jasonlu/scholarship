<h1>Listing studies</h1>

<table>
  <tr>
    <th>User</th>
    <th>Course</th>
    <th>Progress</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @studies.each do |study| %>
  <tr>
    <td><%= study.user_id %></td>
    <td><%= study.course_id %></td>
    <td><%= study.progress_id %></td>
    <td><%= study.status %></td>
    <td><%= link_to 'Show', study %></td>
    <td><%= link_to 'Edit', edit_study_path(study) %></td>
    <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

