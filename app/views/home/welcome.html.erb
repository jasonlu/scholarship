<div class="hero-unit"><h1>Home#welcome</h1>
<p>Find me in app/views/home/welcome.html.erb</p>
</div>

<% @news.each do  |news| %>

<div class="page-header">
  <h1><small><%= news.title %></small></h1>
</div>
<p>
  <%= simple_format(news.content) %>
</p>
<p class="text-right text-info"><%= news.user.user_profile.firstname + ' ' + news.user.user_profile.lastname %></p>

<% end %>

<table class="table table-striped">
  <tr>
    <th>Group</th>
    <th>Category</th>
    <th>Title</th>
    
    <th>Briefing</th>
    
    <th>Price</th>
    <th>Duration days</th>
    
    <th></th>
    
  </tr>

<div class="page-header">
  <h1>Hot courses</h1>
</div>
<% @courses.each do |course| %>
  <tr>
    <td><%= course.group.title %></td>
    <td><%= course.category.title %></td>
    <td><%= course.title %></td>
    
    <td><%= simple_format(course.briefing) %></td>
    
    <td><%= course.price %></td>
    <td><%= course.duration_days %></td>
    
    <td><a class="btn-small btn" href="<%= course_path(course) %>"><i class="icon-eye-open">&nbsp;</i></a>
    <a class="add-to-cart btn-small btn" data-id="<%= course.id %>" href="#"><i class="icon-shopping-cart">&nbsp;</i></a></td>

  </tr>
<% end %>
</table>
